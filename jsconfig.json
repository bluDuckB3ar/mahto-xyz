{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "paths": {
            "@/*": ["./src/*"],
            "contentlayer/generated": ["./.contentlayer/generated"]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}